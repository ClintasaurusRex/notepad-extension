{
  "manifest_version": 3,
  "name": "notepad-extension",
  "version": "1.0",
  "description": "A study tool for taking notes",
  "action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup/sidebar.html"
  },
  "permissions": [
    "alarms",
    "contextMenus",
    "notifications",
    "search",
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "sidepanel"
  ]
}
